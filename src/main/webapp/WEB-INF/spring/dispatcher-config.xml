<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:websocket="http://www.springframework.org/schema/websocket"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.1.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-4.1.xsd
		http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd
        http://www.springframework.org/schema/websocket
        http://www.springframework.org/schema/websocket/spring-websocket-4.1.xsd">

  <context:component-scan base-package="org.dei.perla.rest"/>
  
  <mvc:annotation-driven/>
  <mvc:resources mapping="/console/static/**" location="/static/" />
  
  <util:list id="packages">
    <value>org.dei.perla.fpc.descriptor</value>
    <value>org.dei.perla.fpc.descriptor.instructions</value>
    <value>org.dei.perla.channel.http</value>
    <value>org.dei.perla.message.json</value>
    <value>org.dei.perla.channel.simulator</value>
  </util:list>
  
  <util:list id="mapperFcts">
  	<value>org.dei.perla.message.json.JsonMapperFactory</value>
  	<value>org.dei.perla.channel.simulator.SimulatorMapperFactory</value>
  </util:list>
  
  <util:list id="channelFcts">
  	<value>org.dei.perla.channel.http.HttpChannelFactory</value>
  	<value>org.dei.perla.channel.simulator.SimulatorChannelFactory</value>
  </util:list>
  
  <util:list id="requestBuilderFcts">
  	<value>org.dei.perla.channel.http.HttpIORequestBuilderFactory</value>
  	<value>org.dei.perla.channel.simulator.SimulatorIORequestBuilderFactory</value>
  </util:list>
  
  <bean class="org.dei.perla.rest.controller.PerLaController" scope="singleton" destroy-method="shutdown">
    <constructor-arg name="packages" ref="packages"/>
    <constructor-arg name="mapperFcts" ref="mapperFcts"/>
    <constructor-arg name="channelFcts" ref="channelFcts"/>
    <constructor-arg name="requestBuilderFcts" ref="requestBuilderFcts"/>
  </bean>
  
  <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="prefix">
      <value>/WEB-INF/views/</value>
    </property>
    <property name="suffix">
      <value>.jsp</value>
    </property>
  </bean>
  
  <websocket:message-broker application-destination-prefix="app">
    <websocket:stomp-endpoint path="/query"/>
    <websocket:simple-broker prefix="/output/"/>
  </websocket:message-broker>
  
</beans>